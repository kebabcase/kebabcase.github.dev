{
    "compilerOptions": {
        "outDir": "built/",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2015",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2016",
            "dom"
        ],
        "typeRoots": ["node_modules/@types"]
    },
    "files": [
        "src/require-shims.d.ts"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/*.d.ts"
    ]
}
